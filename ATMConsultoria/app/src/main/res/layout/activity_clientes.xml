<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:oid="text"
    tools:context=".Clientes"
    tools:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="576dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="103dp"
            app:srcCompat="@drawable/detalhe_cliente"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/logoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="136dp"

            android:layout_toEndOf="@+id/rsmId"
            android:text="Nossos Clientes"
            android:textColor="#4dc757"
            android:textSize="30sp"
            tools:text="Nossos Clientes" />@+id/sysId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="236dp"
            app:srcCompat="@drawable/cliente1" />

        <ImageView
            android:id="@+id/rsmId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="123dp"
            app:srcCompat="@drawable/cliente2" />

        <TextView
            android:id="@+id/desc1Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="256dp"
            android:text="Empresa de desenvolvimento de sistemas"
            android:textSize="18sp"
            tools:text="Empresa de desenvolvimento de sistemas" />

        <TextView
            android:id="@+id/desc2Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="84dp"
            android:text="Empresa de auditoria"
            android:textSize="18sp"
            tools:text="Empresa de auditoria" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="231dp"
            app:srcCompat="@drawable/cliente1" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>